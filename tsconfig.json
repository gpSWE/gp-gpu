{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [ "ES2020", "DOM", "DOM.Iterable" ],
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@compute/*": [ "./src/shaders/compute/*", ],
			"@vertex/*": [ "./src/shaders/vertex/*", ],
			"@fragment/*": [ "./src/shaders/fragment/*", ],
			"@render/*": [ "./src/render/*", ],
			"@lib/*": [ "./src/library/*", ],
		}
	},
	"include": [ "src" ]
}
